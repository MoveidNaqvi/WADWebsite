@model Register

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

<div id="login">
    <div class="container1">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <div id="errors"></div>
                    <form id="login-form" class="form" action="" method="post">
                        <h3 class="text-center text-info">Register</h3>
                        <div class="form-group">
                            <label asp-for="UserName" class="text-info">Username:</label><br>
                            <input type="text" asp-for="UserName" name="Username" id="Username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="text-info">Password:</label><br>
                            <input type="password" asp-for="Password" name="Password" id="Password" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="text-info">Confirm Password:</label><br>
                            <input type="password" asp-for="ConfirmPassword" name="ConfirmPassword" id="ConfirmPassword" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="text-info">Email:</label><br>
                            <input type="email" asp-for="Email" name="Email" id="Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="FullName" class="text-info">FullName:</label><br>
                            <input type="text" asp-for="FullName" name="FullName" id="FullName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="BirthDate" class="text-info">BirthDate:</label><br>
                            <input type="date" asp-for="BirthDate" name="BirthDate" id="BirthDate" class="form-control">
                        </div>
                        <div class="form-group">
                            <button type="submit" name="submits" class="btn btn-info btn-md">Register</button>
                        </div>
                        <div asp-validation-summary="All" class="message"></div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



